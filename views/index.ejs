<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Weather App</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"/>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="container-fluid cont">
      <div class="search">
        
      </div>
      <div class="result">
        <div class="temp-img">
          <div class="temp">
            <h1><%= temp %>C</h1>
            <h3><%= cityname %></h3>
          </div>

          <div class="wet-img">
            <img
              src=""
              alt=""
              class="img-fluid image-weather"
            />
            <h3><%= condition %></h3>
          </div>
          <!-- 1_GuWK06WblU1s-upUb6F59Q.webp -->

        </div>

        <div class="wind-hum">
          <div class="wind bottom">
            <h2>Wind speed</h2>
            <h1><%= windSpeed %>KM/H</h1>
          </div>
          <div class="hum bottom">
            <h2>Humidity</h2>
            <h1><%= humidity %>%</h1>
          </div>
          <div class="pressure bottom">
            <h2>Pressure</h2>
            <h1><%= pressure %>hPa</h1>
          </div>
        </div>
      </div>
      <div class="test"><%= weatherIcon %></div>

    </div>
    <div class="another"><button>Search Another City</button></div>


    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
   <script>
    
   </script>
   <script>
    let back = document.querySelector(".another button");
    let image = document.querySelector(".image-weather");
    let data = document.querySelector(".test").innerHTML;
                   if (data == "11d"){
                        image.src = "images/day/thunder.png";
                    }
                    else if (data == "09d"){
                        image.src = "images/day/shower.png";
                    }
                    else if (data == "10d"){
                        image.src = "images/day/rain.png";
                    }
                    else if (data == "13d"){
                        image.src = "images/day/snow.png";
                    }
                    else if (data == "50d"){
                        image.src = "images/day/mist.png";
                    }
                    else if (data == "01d"){
                        image.src = "images/day/clear.png";
                    }
                    else if (data == "02d"){
                        image.src = "images/day/fewclouds.png";
                    }
                    else if (data == "03d"){
                        image.src = "images/day/scarted.png";
                    }
                    else if(data == "03n"){
                      image.src = "images/day/scarted.png";
                    }
                    else if (data == "04d"){
                        image.src = "images/day/broken.png";
                    }
                    else if (data ==  "04n"){
                      image.src = "images/day/broken.png";
                    }
                    else if (data == "02d"){
                        image.src = "images/day/fewclouds.png";
                    }
                                       
    back.addEventListener("click", ()=>{
        window.location.href = "/";
    })
   </script>


  </body>
</html>
